@model RegisterModel
@{
    ViewBag.Title = "Register";
}
<section>
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "box" })) {
            <div class="headline-margin-bottom-10">
                <h2>
                    <i class="fa fa-user" aria-hidden="true"></i>&nbsp;Join ShipWaze
                </h2>
            </div>
            <p>It's free. No obligations!</p>
            <br />

            @Html.AntiForgeryToken()
            if (@Html.ValidationSummary(true) != null) {
                <div class="danger">
                    <div style="display: @string.IsNullOrEmpty(@Html.ValidationSummary().ToString())" id="sign-alert" class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                </div>
            }
            <div class="form-group">
                <label for="username">Username or Email address</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">Confirm Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstname">First Name</label>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="lastname">Last Name</label>
                        @Html.TextBoxFor(m => m.ConfirmEmailAddress, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="username">Phone</label>
                        @Html.TextBoxFor(m => m.ConfirmEmailAddress, new { @class = "form-control" })
                    </div>
                    <div class="form-group text-center">
                        <hr />
                        <button type="submit" class="btn btn-success">Continue</button>
                        <p style="padding-top: 18px;">By signing up, you agree to the <a href="#" target="_blank">Terms of Service</a> and <a href="#" target="_blank">Privacy Policy</a>, including <a href="#" target="_blank">Cookie Use</a>. Others will be able to find you by email or phone number when provided.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

